\f2\fs46 \cf0 Ingredients\
\pard\tx940\tx1440\pardeftab720\li1440\fi-1440\sl320\sa120\ql\qnatural
\ls2\ilvl1
\f1\fs38 \cf0 		1 1/4 cups old-fashioned oats\
		1 cup (about 5 ounces) salted cashews\
		1 1/2 ounces (3 tablespoons) unsalted butter\
		1/2 cup packed dark-brown sugar\
		3/4 teaspoon ground cinnamon\
		3 tablespoons light corn syrup\
		1 tablespoon molasses\
		1/2 teaspoon coarse salt\
\pard\tx220\tx720\pardeftab720\li720\fi-720\sl320\sa120\ql\qnatural
