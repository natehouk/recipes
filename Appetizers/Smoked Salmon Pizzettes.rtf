\f0\b\fs52 \cf0 Smoked Salmon Pizzettes\
\pard\pardeftab720\sl240\ql\qnatural

\f1\fs32 \cf2 Serves:  
\b0 \cf0 4 to 6 servings\
\
\pard\pardeftab720\sl320\ql\qnatural

\f0\b\fs44 \cf0 Ingredients\
\pard\tx220\tx720\pardeftab720\li720\fi-720\sl400\ql\qnatural
\ls1\ilvl0
\f1\b0\fs42 \cf0 {\listtext	\'95	}Flour, for work surface\
{\listtext	\'95	}1 (8-ounce) ball purchased {\field{\*\fldinst{HYPERLINK "http://www.foodterms.com/encyclopedia/dough/index.html"}}{\fldrslt \cf2 pizza dough}}\
\pard\tx220\tx720\pardeftab720\li720\fi-720\sl400\ql\qnatural
