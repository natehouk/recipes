\fs52 \cf0 INGREDIENTS\
\pard\tx220\tx720\pardeftab720\li720\fi-720\sl260\sa280\ql\qnatural
\ls1\ilvl0
\b0\fs48 \cf0 {\listtext	\'95	}6 tablespoons unsalted butter, plus more or greasing the pan\
{\listtext	\'95	}1 1/4 cups granulated sugar\
{\listtext	\'95	}6 large eggs, separated\
{\listtext	\'95	}5 tablespoons instant espresso\
{\listtext	\'95	}6 tablespoons Dutch-processed cocoa powder (recommended: Droste)\
\pard\tx220\tx720\pardeftab720\li720\fi-720\sl260\sa280\ql\qnatural
