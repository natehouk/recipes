\f1\b0\fs50 \cf0 \
\pard\tx940\tx1440\pardeftab720\li1440\fi-1440\sl320\sa120\ql\qnatural
\ls2\ilvl1\cf0 		2 cups sugar\
		2 cups water\
		6 lemons\
\pard\tx220\tx720\pardeftab720\li720\fi-720\sl220\sa60\ql\qnatural
\ls2\ilvl0
