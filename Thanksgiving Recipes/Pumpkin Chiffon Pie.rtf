\f1\b\fs40 \cf2 		For The Crust
\b0\fs42 \cf3 \
\pard\tx940\tx1440\pardeftab720\li1440\fi-1440\sl320\sa120\ql\qnatural
\ls1\ilvl1\cf3 		32 gingersnaps, coarsely broken\
		1/4 cup granulated sugar\
		1/4 teaspoon coarse salt\
		4 tablespoons plus 2 teaspoons unsalted butter, melted\
\pard\tx220\tx720\pardeftab720\li720\fi-720\sl220\sa100\ql\qnatural
\ls1\ilvl0
