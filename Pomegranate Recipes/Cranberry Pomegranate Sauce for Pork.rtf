\ls1\ilvl0\cf0 {\listtext	\'95	}1 1/2 pounds fresh or frozen cranberries (6 cups)\
{\listtext	\'95	}2 cups sugar\
{\listtext	\'95	}1 cup pomegranate juice\
{\listtext	\'95	}2 cups fresh pomegranate seeds\
\pard\pardeftab720\sl360\ql\qnatural
\cf0 \
