\fs36 \cf0  
\f0 3 cups water \uc0\u8232 
\f1 \
\pard\pardeftab720\ql\qnatural

\fs24 \cf0  
\f0\fs36 4 cups sugar\uc0\u8232 
\f1\fs24 \
 
\f0\fs36 3 generous tablespoons espresso powder
\f1\fs24 \
 
\f0\fs36 1/3 cup cocoa nibs\uc0\u8232 
\f1\fs24 \
 
\f0\fs36 2 tablespoons high-quality vanilla extract\uc0\u8232 
\f1\fs24 \
 
